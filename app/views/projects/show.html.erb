<div class= "page-header">
  <% if current_user.owner?(@project) %>
  <div class= "pull-right">
    <%= link_to 'Edit', edit_project_path(@project), class: "btn btn-info" %>
  </div>
  <% end %>

  <h1><%= @project.name %></h1>
</div>
<ol class="breadcrumb">
  <li><a><%= link_to "Projects", projects_path %> </a></li>
  <li class= "active"><%= @project.name %></li>
</ol>

<div class="row">
  <div class="col-sm-12">
    <%= link_to "#{@project.tasks.count} #{'task'.pluralize(@project.tasks.count)}", project_tasks_path(@project) %>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= link_to "#{@project.users.count} #{'membership'.pluralize(@project.users.count)}", project_memberships_path(@project) %>
  </div>
</div>

<% if current_user.owner?(@project) %>
<div class="row">
  <div class="col-sm-12">
    <div class="well">
      <p><strong>Delete project</strong></p>
      <p>
        Deleting this project will also delete <%= pluralize(@project.memberships.count, 'membership') %>, <%= pluralize(@project.tasks.count, 'task') %> and associated comments
      </p>
      <%= link_to 'Delete', project_path(@project), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
<% end %>
