<div class= "page-header">
  <div class= "pull-right">
    <%=link_to_if((@ref == "incomplete"), "All", project_tasks_path(@project, type:"all")) %> |
    <%=link_to_if((@ref == "all"), "Incomplete", project_tasks_path(@project, type:"incomplete")) %>
    <%= link_to 'Create Task', new_project_task_path(@project), class:"btn btn-primary" %>
  </div>

  <h1>Tasks for <%= @project.name %></h1>

</div>
<ol class="breadcrumb">
  <li><a><%= link_to "Projects", projects_path %> </a></li>
  <li><a><%= link_to @project.name, project_path(@project) %></a></li>
  <li class= "active">Tasks</li>
</ol>

<table class = "table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Complete</th>
      <th>Due</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td>
          <%= link_to task.description, project_task_path(@project, task) %>
          <span class="badge">
            <%= task.comments.count %>
          </span>
        </td>
        <td><%= task.complete %></td>
        <td>
          <% if task.due_date %>
          <%= task.due_date.strftime("%m/%d/%Y") %>
          <% else nil %>
          <%end%>
        </td>
          <td>
            <div class= "pull-right">
              <%= link_to 'Edit', edit_project_task_path(@project, task), class:"btn btn-info" %>
              <%= link_to "", project_task_path(@project, task), method: :delete, data: { confirm: 'Are you sure?' }, class: "glyphicon glyphicon-remove" %>
            </div>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @tasks %>

<br>
